<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Left Side: Stock Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stockName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Name (TICKER)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/stockQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 10"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/stockBuyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Price: $120.0"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/stockCurrentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Price: $150.0"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/stockTotalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Value: $1500.00"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:textStyle="italic" />
        </LinearLayout>

        <!-- Right Side: Company Logo -->
        <ImageView
            android:id="@+id/companyLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"

            android:contentDescription="Company Logo"
            android:scaleType="centerInside" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
